@model GoogleCloudSamples.ViewModels.Books.Form

<h3>@(Model.action == GoogleCloudSamples.ViewModels.Books.Form.Action.CREATE ?
        "Create" : "Edit") book</h3>

<form method="POST" id="book-form" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="@Model.book.Title"
               class="form-control" />
    </div>

    <div class="form-group">
        <label for="author">Author</label>
        <input type="text" name="author" id="author" value="@Model.book.Author" 
               class="form-control" />
    </div>

    <div class="form-group">
        <label for="publishedDate">Date Published</label>
        <input type="text" name="publishedDate" id="publishedDate" 
               value="@Model.book.PublishedDate" class="form-control" />
    </div>

    <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" id="description" 
                  class="form-control">@Model.book.Description</textarea>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>